    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("AccountScripts", required: false)
    @await RenderSectionAsync("HomeScripts", required: false)
    @await RenderSectionAsync("testScripts", required: false)
    @await RenderSectionAsync("headerScripts", required: false)
    @await RenderSectionAsync("easteregg_designScripts", required: false)
